        function myFunction() {
        var img = new Image();
        img.src = prompt("Url of a picture:");
    //if url is invalid
        img.onerror = function() { alert("Provided URL does not point to a valid picture.") };
    
    // Ok, we have correct picture; display it
        img.onload = function() {
        document.getElementById("yourImgElement").src = img.src;
    };
